# Конфигурационный файл для ассистента календаря

# Telegram Bot Token (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Путь к модели GGUF
MODEL_PATH=./models/saiga_gemma3_12b_q4_k_m.gguf

# Путь к файлу учетных данных Google Calendar API
GOOGLE_CREDENTIALS_PATH=credentials.json

# Часовой пояс по умолчанию
DEFAULT_TIMEZONE=Europe/Moscow

# Разрешенные пользователи Telegram (через запятую: username1,username2 или user_id1,user_id2)
# Оставьте пустым для разрешения всем пользователям
TELEGRAM_ALLOWED_USERS=

# Google OAuth токен (JSON строка из token.json)
# Скопируйте содержимое token.json сюда для избежания проблем с OAuth
GOOGLE_OAUTH_TOKEN={"token":"","refresh_token":"","token_uri":"https://oauth2.googleapis.com/token","client_id":"","client_secret":"","scopes":["https://www.googleapis.com/auth/calendar"],"universe_domain":"googleapis.com","account":"","expiry":""}

# Установите часовой пояс для событий календаря (по умолчанию: Europe/Moscow)
TIMEZONE=Europe/Moscow

